<div class="main-sidebar">
  <!-- Inner sidebar -->
  <div class="sidebar">
    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <!-- Optionally, you can add icons to the links -->
      <li class="active"><a href="/home">
        <i class="glyphicon glyphicon-home"></i>
        <span>我的文件</span>
      </a>          </li>
    </ul>
  </div><!-- /.sidebar -->
</div><!-- /.main-sidebar -->

<section class="content-header">
  <h1>
    我的文件
  </h1>
</section>
<div>
<div class="row">
<div class="col-md-12 toolbar">
  <button type="button" class="btn btn-primary" ><span class="glyphicon glyphicon-plus"></span> 新建地图</button>
</div>
<div class="col-md-12">
  <table class="table table-hover file-table">
    <thead>
    <tr><th>文件名</th><th>修改时间</th><th>大小</th><th>类型</th><th>操作</th></tr>
    </thead>
    <tbody>
    <% @maps.each do |map|%>
        <tr>
          <td><a href="/file/<%= map.id%>"><i class="glyphicon glyphicon-file"></i> <%=map.title%></a></td>
          <td><%=map.modify_time%></td>
          <td><%=(map.data.file.size / 1024.0 / 1024).round(2) %> MB</td>
          <td><%=map.extname%></td>
          <td><ul class="nav">
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
                操作 <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li role="presentation"><a role="menuitem" class="to_modify_user" href="#" tabindex="-1" data-id="1">重命名</a></li>
                <li role="presentation"><a role="menuitem" href="#" class="to_delete_user" tabindex="-1" data-target="#delete_user_modal" data-toggle="modal" data-id="1">删除</a></li>
              </ul>
            </li>
          </ul></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

</div>
</div>



<script src="/AdminLTE2/plugins/jQuery/jQuery-2.1.4.min.js"></script>
<script src="/AdminLTE2/bootstrap/js/bootstrap.min.js"></script>
<script src="/AdminLTE2/dist/js/app.min.js"></script>
